{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2017",
            "es2018",
            "dom",
            "esnext",
            "esnext.asynciterable"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDirs": [
            "src"
        ],
        "forceConsistentCasingInFileNames": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "files": [
        "./src/types/index.ts"
    ]
}
